<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/round_background"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:id="@+id/text_round"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="N"
        android:gravity="center"
        android:textSize="32sp" />
    <TextView
        android:id="@+id/text_fullname"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/text_round"
        android:layout_toLeftOf="@id/text_time"
        android:text="Name1"
        android:gravity="center|left"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="content1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/text_time"
        android:layout_toRightOf="@id/text_round"
        android:layout_below="@id/text_fullname"
        android:gravity="center|left"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="content1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/text_time"
        android:layout_toRightOf="@id/text_round"
        android:layout_below="@id/text_subject"
        android:gravity="center|left"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="12pm"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_alignParentRight="true" />
    <ImageView
        android:id="@+id/img_star"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_star_normal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/text_time"/>




</RelativeLayout>